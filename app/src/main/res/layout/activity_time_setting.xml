<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey3"
    tools:context=".TimeSetting">

    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/orange"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="2dp"
                    android:id="@+id/idbackmoreproduct"
                    android:layout_gravity="center"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:tint="#fff"
                    android:src="@drawable/ic_arrow_back_black_24dp"/>


                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="More"/>



            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/linear1"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"

            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Set Off Day"/>

        <EditText
            android:background="@drawable/searchshape"
            android:id="@+id/edOffDay"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="e.g. Friday"
            android:importantForAutofill="no"
            />

        <TextView
            android:layout_marginTop="10dp"

            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Set Shop Time"/>
        <TextView
            android:id="@+id/idtvshopopentime"
            android:background="@drawable/searchshape"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Click to Select Shop open Time"/>
        <TextView
            android:id="@+id/idtvshopclosetime"
            android:layout_marginTop="10dp"
            android:background="@drawable/searchshape"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Click to Select Shop close Time"/>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/idbtnsetshoptime"
            android:textColor="#fff"
            android:backgroundTint="@color/greentype"
            android:background="@drawable/searchshape"
            android:text="Set Time"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            />
    </LinearLayout>

</RelativeLayout>