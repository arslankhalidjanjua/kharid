<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/lightgrey2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/orange"
        android:layout_height="45dp">
        <ImageView
            android:padding="2dp"
            android:id="@+id/idbackcategory"
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:tint="#fff"
            android:src="@drawable/ic_arrow_back_black_24dp"/>
        <TextView

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="Mobiley Parteners"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradientbutton"
            android:layout_height="180dp">
            <TextView
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Categories"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="135dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    card_view:cardCornerRadius="2dp"
                    android:id="@+id/idcvmob">
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:tint="@color/orange"
                            android:src="@drawable/iconmob"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:text="Mobile"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="2dp"
                    android:background="@color/lightgrey"
                    android:layout_height="match_parent">

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    card_view:cardCornerRadius="2dp"
                    android:id="@+id/idcvwatch">
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:tint="@color/orange"
                            android:src="@drawable/watchicon"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:text="Accessories"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content">


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>







</LinearLayout>



