<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="?android:attr/windowBackground"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:id="@+id/txtDay1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/orange"
        android:layout_height="45dp">
        <TextView
            android:paddingLeft="10dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="22dp"
            android:text="Mobiley Parteners"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradientbutton"
            android:layout_height="180dp">
            <TextView
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Dashboard"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="135dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_centerHorizontal="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="160dp"
                android:layout_height="110dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardBackgroundColor="#FFFFFF"
                android:id="@+id/idcvReport">


                <ImageView
                android:id="@+id/imgReport"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Report"/>


            </androidx.cardview.widget.CardView>
            <View
                android:id="@+id/view1"
                android:layout_below="@id/idcvReport"
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="2dp"
                android:background="#757575"/>
            <LinearLayout
                android:gravity="center"
                android:layout_below="@id/view1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    card_view:cardElevation="5dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="160dp"
                    android:layout_height="110dp"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardBackgroundColor="#FFFFFF"
                    android:id="@+id/idcvOrder">


                    <ImageView
                        android:id="@+id/imgOrder"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                    <TextView
                        android:layout_marginTop="40dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="Order Management"/>


                </androidx.cardview.widget.CardView>
<View
    android:background="#757575"
    android:layout_width="2dp"
    android:layout_height="110dp"/>
                <androidx.cardview.widget.CardView
                    card_view:cardElevation="5dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="160dp"
                    android:layout_height="110dp"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardBackgroundColor="#FFFFFF"
                    android:id="@+id/idcvProduct">


                    <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <TextView
                        android:layout_marginTop="40dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="Product Management"/>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>