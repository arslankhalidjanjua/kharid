<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativetop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_icon"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/topround" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="Enter Verification Code"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/relativetop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:padding="25dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/otp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Enter Code"
            android:textColor="@color/darkgreentype"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="We have sent OTP to your mobile number"
            android:textColor="#757575"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.example.khareedlo.otp.OtpView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:inputType="number"
            app:itemRadius1="7dp"
            android:itemBackground="@color/darkgreentype"
            android:textColor="#fff"
            app:itemCount1="6"
            app:itemWidth1="45dp"
            app:itemSpacing1="5dp"
            app:cursorColor1="#fff"
            app:lineWidth1="2dp"
            android:layout_gravity="center_horizontal"
            app:state_filled1="false"
            app:lineColor1="#fff"
            app:viewType1="rectangle1"

            />
        <TextView
            android:id="@+id/tvResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnverify"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="Verify"
            android:background="@drawable/btn_bg_round"
            android:enabled="false"
            android:textColor="@color/darkgreentype"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>
    <Button
        android:layout_toRightOf="@id/btnverify"
        android:id="@+id/button_register_verification"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Again Register"
        android:background="@drawable/btn_bg_round"
        android:textColor="@color/darkgreentype"
        android:textStyle="bold" />
</RelativeLayout>
</RelativeLayout>

    </LinearLayout>
</RelativeLayout>
</ScrollView>